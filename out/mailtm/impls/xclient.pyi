from ..abc.generic import Token
from ..abc.modals import (
    Account,
    Domain,
    DomainPageView,
    Message,
    MessagePageView,
    Source,
)

__all__ = ["AsyncMail"]

class AsyncMail:
    def __init__(self, account_token: Token | None = None) -> None: ...
    async def get_me(self) -> Account | None: ...
    async def get_domains(self) -> DomainPageView | None: ...
    async def get_domain(self, domain_id: str) -> Domain | None: ...
    async def get_account(self, account_id: str) -> Account | None: ...
    async def create_account(
        self, address: str, password: str
    ) -> Account | None: ...
    async def delete_account(self, account_id: str | None = None) -> None: ...
    async def get_messages(self, page: int = 1) -> MessagePageView | None: ...
    async def get_message(self, message_id: str) -> Message | None: ...
    async def delete_message(self, message_id: str) -> None: ...
    async def mark_as_seen(self, message_id: str) -> None: ...
    async def get_source(self, source_id: str) -> Source | None: ...
    async def close(self) -> None: ...
